<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Tracking</h:title>
    <model>
      <instance>
        <tracking delimiter="#" id="tracking" prefix="J1!tracking!" version="2020-07-21 23:12:05">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <contact>
                <_id/>
                <name/>
              </contact>
              <parent>
                <parent>
                  <contact>
                    <name/>
                    <phone/>
                  </contact>
                </parent>
              </parent>
            </contact>
          </inputs>
          <source/>
          <source_id/>
          <place_id/>
          <place_name/>
          <head/>
          <tracking_nformation>
            <tracking_attempted/>
            <why_not/>
            <Specify/>
            <number_of_attempt/>
            <date_attempted/>
            <tracing_type/>
            <outcome/>
            <outcome_status_reached/>
            <status/>
            <exit_reason/>
            <source_of_info/>
            <status_in_program/>
            <reason_for_exit/>
          </tracking_nformation>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </tracking>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/tracking/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/tracking/inputs/source" type="string"/>
      <bind nodeset="/tracking/inputs/source_id" type="string"/>
      <bind nodeset="/tracking/inputs/contact/_id" type="db:clinic"/>
      <bind nodeset="/tracking/inputs/contact/name" type="string"/>
      <bind nodeset="/tracking/inputs/contact/contact/_id" type="db:person"/>
      <bind nodeset="/tracking/inputs/contact/contact/name" type="string"/>
      <bind nodeset="/tracking/inputs/contact/parent/parent/contact/name" type="string"/>
      <bind nodeset="/tracking/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind calculate="../inputs/source" nodeset="/tracking/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/tracking/source_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/tracking/place_id" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/tracking/place_name" type="string"/>
      <bind calculate="../inputs/contact/contact/name" nodeset="/tracking/head" type="string"/>
      <bind nodeset="/tracking/tracking_nformation/tracking_attempted" required="true()" type="select1"/>
      <bind nodeset="/tracking/tracking_nformation/why_not" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;no&quot;" required="false()" type="select1"/>
      <bind nodeset="/tracking/tracking_nformation/Specify" relevant=" /tracking/tracking_nformation/why_not =&quot;other&quot;" required="false()" type="string"/>
      <bind nodeset="/tracking/tracking_nformation/number_of_attempt" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" required="false()" type="string"/>
      <bind nodeset="/tracking/tracking_nformation/date_attempted" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" type="date"/>
      <bind nodeset="/tracking/tracking_nformation/tracing_type" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" required="false()" type="select1"/>
      <bind nodeset="/tracking/tracking_nformation/outcome" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" required="false()" type="select1"/>
      <bind nodeset="/tracking/tracking_nformation/outcome_status_reached" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" required="false()" type="select1"/>
      <bind nodeset="/tracking/tracking_nformation/status" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" required="false()" type="select1"/>
      <bind nodeset="/tracking/tracking_nformation/exit_reason" relevant=" /tracking/tracking_nformation/status =&quot;voluntary_exitt&quot;" type="string"/>
      <bind nodeset="/tracking/tracking_nformation/source_of_info" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" required="false()" type="select1"/>
      <bind nodeset="/tracking/tracking_nformation/status_in_program" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" required="false()" type="select1"/>
      <bind nodeset="/tracking/tracking_nformation/reason_for_exit" relevant=" /tracking/tracking_nformation/tracking_attempted =&quot;yes&quot;" required="false()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/tracking/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/tracking/inputs">
      <label>Patient</label>
      <group ref="/tracking/inputs/contact">
        <label>Contact</label>
        <input appearance="db-object" ref="/tracking/inputs/contact/_id">
          <label>What is the patient's name?</label>
        </input>
        <group ref="/tracking/inputs/contact/contact">
          <label>Contact</label>
          <input appearance="db-object" ref="/tracking/inputs/contact/contact/_id">
            <label>ID of head of household</label>
          </input>
        </group>
        <group ref="/tracking/inputs/contact/parent">
          <label>Parent</label>
          <group ref="/tracking/inputs/contact/parent/parent">
            <label>Parent</label>
            <group ref="/tracking/inputs/contact/parent/parent/contact">
              <label>Contact</label>
            </group>
          </group>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/tracking/tracking_nformation">
      <label>Tracking Information</label>
      <select1 ref="/tracking/tracking_nformation/tracking_attempted">
        <label>Tracking Attempted</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <select1 ref="/tracking/tracking_nformation/why_not">
        <label>Why was tracking not attempted?</label>
        <item>
          <label>Contact information illegible</label>
          <value>info_illegible</value>
        </item>
        <item>
          <label>Location listed too general to make tracking possible</label>
          <value>loction_too_general</value>
        </item>
        <item>
          <label>Contact information missing</label>
          <value>contact_info_missing</value>
        </item>
        <item>
          <label>Cohort register/peer outreach calendar reviewed and client not lost to followup</label>
          <value>not_lost_followup</value>
        </item>
        <item>
          <label>Other (Specify)</label>
          <value>other</value>
        </item>
      </select1>
      <input ref="/tracking/tracking_nformation/Specify">
        <label>Specify:</label>
      </input>
      <input ref="/tracking/tracking_nformation/number_of_attempt">
        <label>Please specify the attempt number since last missed appointment(ie 1,2,3):</label>
      </input>
      <input ref="/tracking/tracking_nformation/date_attempted">
        <label>Date of attempt</label>
      </input>
      <select1 ref="/tracking/tracking_nformation/tracing_type">
        <label>Tracing Type</label>
        <item>
          <label>Phone</label>
          <value>phone</value>
        </item>
        <item>
          <label>Physical</label>
          <value>physical</value>
        </item>
      </select1>
      <select1 ref="/tracking/tracking_nformation/outcome">
        <label>Tracing Outcome</label>
        <item>
          <label>KP reached</label>
          <value>reached</value>
        </item>
        <item>
          <label>KP not reached,but rather informant reached</label>
          <value>not_reached_info_reached</value>
        </item>
        <item>
          <label>KP not reached</label>
          <value>bar_without_lodging</value>
        </item>
      </select1>
      <select1 ref="/tracking/tracking_nformation/outcome_status_reached">
        <label>Was the final outcome reached?</label>
        <item>
          <label>Yes</label>
          <value>yes</value>
        </item>
        <item>
          <label>No</label>
          <value>no</value>
        </item>
      </select1>
      <select1 ref="/tracking/tracking_nformation/status">
        <label>Status</label>
        <item>
          <label>Dead</label>
          <value>dead</value>
        </item>
        <item>
          <label>Relocated</label>
          <value>relocated</value>
        </item>
        <item>
          <label>Voluntary Exit</label>
          <value>voluntary_exit</value>
        </item>
        <item>
          <label>Enrolled in MAT</label>
          <value>endrolled_in_mat</value>
        </item>
        <item>
          <label>Untraceable</label>
          <value>untraceable</value>
        </item>
        <item>
          <label>Bedridden</label>
          <value>bedridden</value>
        </item>
        <item>
          <label>Imprisoned</label>
          <value>imprisoned</value>
        </item>
        <item>
          <label>Found</label>
          <value>found</value>
        </item>
      </select1>
      <input ref="/tracking/tracking_nformation/exit_reason">
        <label>Comments explaining the reasons for Voluntary Exit</label>
      </input>
      <select1 ref="/tracking/tracking_nformation/source_of_info">
        <label>Source of Information</label>
        <item>
          <label>Key Population</label>
          <value>kp</value>
        </item>
        <item>
          <label>Peer Educator</label>
          <value>pe</value>
        </item>
        <item>
          <label>Other Information</label>
          <value>other_info</value>
        </item>
      </select1>
      <select1 ref="/tracking/tracking_nformation/status_in_program">
        <label>Status in the programme:</label>
        <item>
          <label>Lost Followup</label>
          <value>lost_followup</value>
        </item>
        <item>
          <label>Defaulted</label>
          <value>defaulted</value>
        </item>
        <item>
          <label>Active</label>
          <value>active</value>
        </item>
        <item>
          <label>Dead</label>
          <value>dead</value>
        </item>
      </select1>
      <input ref="/tracking/tracking_nformation/reason_for_exit">
        <label>Reasons for voluntary exit:</label>
      </input>
    </group>
  </h:body>
</h:html>
